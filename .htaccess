# .htaccess for Clean URLs and Routing
RewriteEngine On

# Redirect /vendor/register to /seller/register (fix broken route)
RewriteRule ^vendor/register\.php$ /seller/register [R=301,L]
RewriteRule ^vendor/register$ /seller/register [R=301,L]

# Pretty URLs for seller routes
RewriteRule ^seller/register/?$ seller-register.php [L]
RewriteRule ^seller/onboarding/?$ seller-onboarding.php [L]

# Pretty URLs for account routes  
RewriteRule ^account/orders/?$ account-orders.php [L]
RewriteRule ^account/security/?$ account-security.php [L]
RewriteRule ^account/addresses/?$ account-addresses.php [L]
RewriteRule ^account/payments/?$ account-payments.php [L]

# 404 handler
ErrorDocument 404 /404.php

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Prevent access to sensitive files
<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

<FilesMatch "\.(sql|db)$">
    Order allow,deny
    Deny from all
</FilesMatch>